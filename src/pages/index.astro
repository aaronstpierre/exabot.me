      }

      h1 {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }

      h1 span {
        color: var(--accent);
      }

      .tagline {
        color: var(--text-muted);
        font-size: 1.1rem;
      }

      .tagline a {
